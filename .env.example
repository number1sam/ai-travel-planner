# Database
DATABASE_URL="postgresql://username:password@localhost:5432/travel_agent"

# JWT
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_REFRESH_SECRET="your-super-secret-refresh-jwt-key-change-this-in-production"

# Encryption Keys (Generate with: openssl rand -base64 32)
PII_ENCRYPTION_KEY="your-32-character-encryption-key-for-pii-data"
SESSION_ENCRYPTION_KEY="your-32-character-session-encryption-key"

# Redis
REDIS_URL="redis://localhost:6379"
REDIS_PASSWORD=""

# Stripe
STRIPE_SECRET_KEY="sk_test_your_stripe_secret_key"
STRIPE_PUBLISHABLE_KEY="pk_test_your_stripe_publishable_key"
STRIPE_WEBHOOK_SECRET="whsec_your_webhook_secret"
STRIPE_PREMIUM_PRICE_ID="price_premium_plan_id"
STRIPE_PRO_PRICE_ID="price_pro_plan_id"

# PayPal
PAYPAL_CLIENT_ID="your_paypal_client_id"
PAYPAL_CLIENT_SECRET="your_paypal_client_secret"
PAYPAL_ENVIRONMENT="sandbox" # or "live"

# Email Service (SendGrid, Mailgun, etc.)
EMAIL_SERVICE="sendgrid"
SENDGRID_API_KEY="your_sendgrid_api_key"
FROM_EMAIL="noreply@your-domain.com"
FROM_NAME="AI Travel Planner"

# SMS Service (Twilio)
TWILIO_ACCOUNT_SID="your_twilio_account_sid"
TWILIO_AUTH_TOKEN="your_twilio_auth_token"
TWILIO_PHONE_NUMBER="+1234567890"

# External APIs
AMADEUS_API_KEY="your_amadeus_api_key"
AMADEUS_API_SECRET="your_amadeus_api_secret"
BOOKING_API_KEY="your_booking_com_api_key"
GOOGLE_MAPS_API_KEY="your_google_maps_api_key"
OPENAI_API_KEY="your_openai_api_key"
SKYSCANNER_API_KEY="your_skyscanner_api_key"
KIWI_API_KEY="your_kiwi_api_key"

# Frontend URL
FRONTEND_URL="http://localhost:3000"
BACKEND_URL="http://localhost:3000"

# Security
CORS_ORIGIN="http://localhost:3000"
RATE_LIMIT_WINDOW_MS="900000" # 15 minutes
RATE_LIMIT_MAX_REQUESTS="100"

# TLS Configuration (Production)
TLS_MIN_VERSION="TLSv1.3"
HSTS_MAX_AGE="31536000"

# Monitoring and Logging
LOG_LEVEL="info" # debug, info, warn, error
ENABLE_AUDIT_LOGGING="true"
ENABLE_SECURITY_MONITORING="true"

# GDPR Compliance
DATA_RETENTION_DAYS="2555" # 7 years
GDPR_GRACE_PERIOD_DAYS="30"
ENABLE_GDPR_FEATURES="true"

# Health Data Integration
FITBIT_CLIENT_ID="your_fitbit_client_id"
FITBIT_CLIENT_SECRET="your_fitbit_client_secret"
APPLE_HEALTH_KEY_ID="your_apple_health_key_id"
GOOGLE_FIT_CLIENT_ID="your_google_fit_client_id"

# Node Environment
NODE_ENV="development" # development, production, test

# Session Configuration
SESSION_TIMEOUT_MINUTES="60"
REFRESH_TOKEN_EXPIRY_DAYS="30"

# File Upload
MAX_FILE_SIZE_MB="10"
ALLOWED_FILE_TYPES="image/jpeg,image/png,image/webp,application/pdf,text/plain"

# Backup Configuration
BACKUP_ENABLED="true"
BACKUP_SCHEDULE="0 2 * * *" # Daily at 2 AM
AWS_BACKUP_BUCKET="your-backup-bucket"
AWS_ACCESS_KEY_ID="your_aws_access_key"
AWS_SECRET_ACCESS_KEY="your_aws_secret_key"
AWS_REGION="us-east-1"

# Error Reporting
SENTRY_DSN="your_sentry_dsn"
ENABLE_ERROR_REPORTING="true"

# Feature Flags
ENABLE_PREMIUM_FEATURES="true"
ENABLE_HEALTH_TRACKING="true"
ENABLE_AI_RECOMMENDATIONS="true"
ENABLE_NOTIFICATIONS="true"

# Admin Configuration
ADMIN_EMAIL="admin@your-domain.com"
ADMIN_PANEL_ENABLED="true"
SECURITY_ALERTS_EMAIL="security@your-domain.com"

# Development Only (Remove in production)
DEBUG_MODE="true"
MOCK_EXTERNAL_APIS="false"
SKIP_EMAIL_VERIFICATION="false"